<div class="d-flex flex-wrap">
<% for (course of courses) {   
    %>
    <div class="bg-light m-5 p-2 border border-primary border-2">
        <a href="/schedule/remove/<%= course._id %>" style="float:right;">X</a>
        <div class="">
            <span>
                <%= course.subject %> 
                <%= course.coursenum %> 
                <%= course.term %> 
            </span>
            <strong><%= course.name %></strong>
            
        </div>
        <div class="mb-1">
            <%=course.instructor[0] %>
            <%=course.instructor[1] %>
            (<%=course.instructor[2] %>)
        </div>
        <div><a href="/addCourse/<%= course['_id'] %>">(add to schedule)</a></div>
        <div class="mb-1">
           Enrollment: <%=course.enrolled %>,
           Limit: <%=course.limit || 999 %>,
           Waitlist: <%= course.waiting %>
           <br>
           Times: <%= course.strTimes %>
        </div>
        <div class="">
            <em><%=course.details %></em>
        </div>
        <div class="p-3">
            <%=course.description %>
        </div>
    
    </div>
    <% } %>
</div>

